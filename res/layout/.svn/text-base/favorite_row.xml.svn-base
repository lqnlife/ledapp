<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:padding="5dip">
  
  <ImageView android:src="@drawable/bookmark_small" 
             android:layout_marginRight="10dip"
             android:layout_marginLeft="10dip" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"/>  
             
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		
		<TextView android:id="@+id/favorite_body"
			android:textColor="@android:color/white"			
			android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"/>
		<TextView android:id="@+id/favorite_category"
			android:textColor="@android:color/white"
			android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"
		   	android:visibility="gone"/>
		<TextView android:id="@+id/favorite_desc"
			android:textColor="@android:color/white"
			android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"
		   	android:visibility="gone"/>
		<TextView android:id="@+id/favorite_url"
			android:textColor="@color/css_a"
			android:autoLink="all"
			android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"/>
	</LinearLayout>
            
  		
</LinearLayout>
