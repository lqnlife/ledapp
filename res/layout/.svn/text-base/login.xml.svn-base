<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:background="@drawable/loginbg"
	>
	
	<EditText android:id="@+id/username_field" android:hint="输入用户名" android:layout_x="55px" android:layout_y="160px"  android:layout_width="200dip" android:layout_height="wrap_content"/>
	
	<EditText android:id="@+id/password_field" android:layout_x="55px" android:layout_y="210px" android:inputType="textPassword" android:hint="输入密码" android:layout_width="200dip" android:layout_height="wrap_content"/>
	
	<ImageButton android:id="@+id/login_button" android:background="@drawable/ok"  android:layout_x="55px" android:layout_y="260px" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	
	<ImageButton android:id="@+id/login_canel" android:background="@drawable/canel"  android:layout_x="165px" android:layout_y="260px" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</AbsoluteLayout>
