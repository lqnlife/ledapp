<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:background="@android:color/white"
	>

	<ImageView android:src="@drawable/je_large_logo" android:layout_marginTop="20dip" android:layout_marginBottom="20dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	
	
	<LinearLayout android:id="@+id/twitter_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/twitter" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="闲聊" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/message_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/message" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="短信" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/bookmark_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/bookmark" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="收藏" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/about_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/android_cn" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="关于" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/logout_row" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/logout" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="注销" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/exit_row" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/exit" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="退出" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
	
</LinearLayout>
